{
  "name": "take-in-orphans",
  "displayName": "Take in Orphans",
  "description": "Automatycznie dodaje &nbsp; w miejscach wymagających niełamiących się spacji",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "take-in-orphans.fixOrphans",
        "title": "Napraw sieroty typograficzne",
        "category": "Take in Orphans"
      }
    ],
    "keybindings": [
      {
        "command": "take-in-orphans.fixOrphans",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "watch": "webpack --watch",
    "compile": "webpack && tsc -p . --outDir out",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "pretest": "npm run lint:fix && npm run compile",
    "test": "vscode-test",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vscode:prepublish": "npm run package"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.105.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.36.0",
    "mocha": "11.7.4",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "webpack": "5.102.0",
    "webpack-cli": "6.0.1"
  }
}
